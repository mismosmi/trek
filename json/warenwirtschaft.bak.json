                    "type": "VARCHAR(30)"
                },
                {
                    "name": "name",
                    "title": "Produktname",
                    "class": 1,
                    "type": "VARCHAR(30)",
                    "required": true
                },
                {
                    "name": "unitprice",
                    "title": "Preis/Einheit",
                    "class": 1,
                    "type": "EURO",
                    "required": true
                },
                {
                    "name": "unit",
                    "title": "Teile/Einheit",
                    "class": 1,
                    "type": "INTEGER",
                    "default": 1
                },
                {
                    "name": "pieceprice",
                    "title": "Preis/Teil",
                    "class": 2,
                    "js": "tv.unitprice * tv.unit"
                },
                {
                    "name": "notes",
                    "title": "Notizen",
                    "class": 1,
                    "type": "VARCHAR(30)"
